{
    "name": "${environmentName}",
    "description": "Blockchain II",
    "version": "0.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        {
            "hostname": "bs7",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "size": "LARGE"
        },
        {
            "hostname": "bc",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "peer-layout": "bcs",
            "size": "LARGE"
        },
        {
            "hostname": "m",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "peer-layout": "m",
            "size": "SMALL"
        }
    ],
    "peer-criteria": [
        {
            "name": "peers"
        }
    ],
    "peer-layouts": [
        {
            "name": "bcs",
            "peer-count": "${numberOfNodes}",
            "container-per-peer": "1"
        },
        {
            "name": "m",
            "peer-count": "${numberOfMiners}",
            "container-per-peer": "1"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-bp-blockchain2/archive/master.zip",
        "ansible-playbook": "site.yml",
        "groups": [
            
            {
                "name": "bs3",
                "hostnames": [
                    "bs7"
                ]
            },
            {
                "name": "m",
                "hostnames": [
                    "m"
                ]
            },
            {
                "name": "bc",
                "hostnames": [
                    "bc"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "biab2",
            "validation": "[a-zA-Z0-9]+"
        },
        "numberOfNodes": {
            "description": "Enter the number of nodes",
            "type": "int",
            "default": "2"
        },
        "numberOfMiners": {
            "description": "Enter the number of miners",
            "type": "int",
            "default": "2"
        }
    }
}
